<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ana içerik -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mekan Adı"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/place_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mekan Adresi"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/place_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:contentDescription="Mekan Fotoğrafı" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/average_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="15sp" />

                <RatingBar
                    android:id="@+id/average_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/quantum_grey400"
                    android:progressTint="@color/quantum_yellow"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:secondaryProgressTint="@color/quantum_yellow"
                    android:stepSize="0.1" />


            </LinearLayout>



            <TextView
                android:id="@+id/accessibility_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Güncel Uygunluk Bilgisi"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="25dp" />


            <!-- Son asansör bilgisi -->
            <TextView
                android:id="@+id/last_elevator_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/quantum_grey900"

                android:layout_marginTop="8dp" />

            <!-- Son rampa bilgisi -->
            <TextView
                android:id="@+id/last_ramp_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/quantum_grey900"

                android:layout_marginTop="4dp"
                android:layout_marginBottom="25dp"/>

            <Button
                android:id="@+id/write_comment_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Yorum Yaz"
                android:layout_gravity="center"
                android:background="@drawable/add_comment_shape"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"/>






            <LinearLayout
                android:id="@+id/comment_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            <!-- Yorum alanı -->
            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Yorum yaz."
                android:layout_marginBottom="8dp" />


                <TextView
                    android:id="@+id/elevator_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asansör çalışıyor mu?"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

            <RadioGroup
            android:id="@+id/elevator_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:orientation="horizontal"
            android:layout_marginBottom="8dp">
                <RadioButton
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evet" />

                <RadioButton
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hayır" />
            </RadioGroup>

            <!-- Rampa durumu -->
            <TextView
                android:id="@+id/ramp_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rampa var mı?"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <RadioGroup
                android:id="@+id/ramp_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <RadioButton
                    android:id="@+id/ramp_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Var" />

                <RadioButton
                    android:id="@+id/ramp_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yok" />
            </RadioGroup>

                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/add_photo_1_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="+"
                android:background="@color/white"
                android:textColor="@color/kirmizi_500"
                android:textSize="30dp"/>



            <Button
                android:id="@+id/add_photo_2_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:textColor="@color/kirmizi_500"
                android:textSize="30dp"
                android:text="+" />


</LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/photo_previews">
            <ImageView
                android:id="@+id/photo_1_preview"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/photo_2_preview"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/comment_buttons_container">
            <!-- Yorum gönderme butonu -->
            <Button
                android:id="@+id/comment_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cancel_button_shape"
                android:text="Yorum Yap"
                android:layout_marginBottom="16dp" />


            <Button
                android:id="@+id/cancel_comment_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cancel_button_shape"
                android:text="İptal Et"
                android:layout_marginBottom="16dp" />
            </LinearLayout>
        </LinearLayout>

            <TextView
                android:id="@+id/comments_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yorumlar"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp" />
            <!-- Yorum listesi -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="50dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
           android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Drawer Menüsü -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
