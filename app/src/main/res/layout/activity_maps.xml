<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Üstteki Elemanlar -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/map"
        android:padding="8dp"
        android:background="#293260A2">

        <Button
            android:id="@+id/clear_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_button_background"
            android:text="X"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <EditText
            android:id="@+id/start_location"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Başlangıç"
            android:padding="16dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/end_location"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Varış"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background" />

        <RadioGroup
            android:id="@+id/wheelchair_type_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/manual_wheelchair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manuel"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/electric_wheelchair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akülü"
                android:textStyle="bold"/>
        </RadioGroup>

        <Button
            android:id="@+id/plan_route_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROTA OLUŞTUR"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:background="@color/teal_200"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- Harita Fragmenti -->

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/controls_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_button_container" />




    <Button
        android:id="@+id/info_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_info_solid"
        android:clickable="true"
        android:visibility="gone"
        android:enabled="true"
        android:elevation="20dp"
        android:textColor="#1E297E"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/map"
        app:layout_constraintEnd_toEndOf="@id/map" />

        <Button
            android:id="@+id/current_location_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:backgroundTint="#0034EE"
            android:elevation="4dp"
            android:gravity="center"
            android:text="Mevcut Konumu Kullan"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="@+id/map"
            app:layout_constraintTop_toTopOf="@+id/map" />


        <Button
            android:id="@+id/add_to_favorites_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/star_button_background"
            android:visibility="gone"
            android:layout_marginTop="10dp"

            app:layout_constraintTop_toBottomOf="@id/info_button"
        app:layout_constraintStart_toStartOf="@id/info_button"
        app:layout_constraintEnd_toEndOf="@id/info_button"/>


        <!-- Bilgilendirme Paneli -->
    <LinearLayout
        android:id="@+id/info_panel"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#3141CE"
        android:padding="16dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:elevation="4dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_button">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/info_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:lineSpacingExtra="5dp"
                android:scrollbars="vertical" />
        </ScrollView>
    </LinearLayout>



    <!-- Talimatlar TextView -->
    <TextView
        android:id="@+id/step_instruction_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:background="#4A90E2"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <TextView
        android:id="@+id/directions_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#376AA6"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/step_instruction_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="50dp" />

    <!-- Eğim Bilgisi TextView -->
    <TextView
        android:id="@+id/highest_slope_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Maksimum Eğim: 0%"
        android:textSize="14sp"
        android:textColor="#313131"
        android:padding="8dp"
        android:visibility="gone"
        android:background="#B3FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/directions_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />






    <!-- Footer Butonları -->
    <LinearLayout
        android:id="@+id/bottom_button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <Button
            android:id="@+id/end_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BİTİR"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="#E42E2E"
            android:backgroundTint="@color/kirmizi_200"
            android:textColor="#FFFFFF"
            android:visibility="gone"/>

        <Button
            android:id="@+id/show_all_directions_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yol Tariflerini Göster"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="#2196F3"
            android:textColor="#FFFFFF"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView

    android:id="@+id/navigation_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    app:menu="@menu/drawer_menu" />


</androidx.drawerlayout.widget.DrawerLayout>